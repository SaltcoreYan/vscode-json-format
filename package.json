{
  "name": "json-format",
  "displayName": "jsonFormat",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "activationEvents": [
    "onCommand:json-format.jsonFormat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-format.jsonFormat",
        "title": "json-format"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "json-format",
      "properties": {
        "json-format.maxInputSizeMB": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "description": "最大可解析输入大小（MB）。0 表示不限制。"
        },
        "json-format.decodeUnicode": {
          "type": "boolean",
          "default": true,
          "description": "是否将字符串中的 Unicode 转义还原。"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
