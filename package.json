{
  "name": "json-format",
  "displayName": "jsonFormat",
  "description": "",
  "version": "0.0.1",
  "engines": { "vscode": "^1.103.0" },
  "categories": ["Formatters"],
  "activationEvents": ["onCommand:json-format.jsonFormat"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-format.jsonFormat",
        "title": "json-format: 格式化 JSON"
      }
    ],
    "keybindings": [
      {
        "command": "json-format.jsonFormat",
        "key": "ctrl+alt+j",
        "when": "editorTextFocus && !editorReadonly"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "json-format",
      "properties": {
        "json-format.maxInputSizeMB": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "description": "最大可解析输入大小（MB）。0 表示不限制。"
        },
        "json-format.decodeUnicode": {
          "type": "boolean",
          "default": true,
          "description": "是否将字符串中的 Unicode 转义还原。"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript": "^5.9.2"
  },
  "dependencies": {}
}
