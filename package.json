{
  "name": "json-format",
  "displayName": "jsonFormat",
  "description": "",
  "version": "0.0.1",
  "engines": { "vscode": "^1.103.0" },
  "activationEvents": ["onCommand:json-format.jsonFormat"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-format.jsonFormat",
        "title": "json-format"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "json-format",
      "properties": {
        "json-format.maxInputSizeMB": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "description": "最大可解析输入大小（单位 MB）。超过该大小将取消解析以避免阻塞/OOM。设置为 0 表示不限制。"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./ && node ./scripts/copy-worker.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
